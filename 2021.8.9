int my_strlen(char* p)
{
	char* start = p;
	char* end = p;
	while (*end != '\0')
	{
		end++;
	}
	return end - start;

}
int main()
{

	char arr[] = "welcome to china";
	int length = my_strlen(arr);
	printf("最后字符串的长度是：%d\n", length);
